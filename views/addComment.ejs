<!DOCTYPE html>
<html lan="en">
  <%- include('partials/header.ejs') %>
  <body>
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Comics</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addComic">Add Comic</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

<% if (typeof comic != "undefined") { %> 
<div id="comicSpecifics">
  <%= comic[0].comicTitle %>
  <img src="<%=comic[0].comicUrl%>" alt="Comic">
</div>
<form method="POST" action="/submitAddComment">
  <div class="mb-3">
    <input type="hidden" value="<%=comic[0].comicId%>" class="form-control" id="storeComicId" name="comicId">
  </div>
  <div class="mb-3">
    <label for="inputUsername" class="form-label">Username: </label>
    <input type="text" class="form-control" name="inputUsername" required>
  </div>
  <div class="mb-3">
    <label for="inputEmail" class="form-label">Email Address: </label>
      <input type="text" class="form-control" name="inputEmail" required>
  </div>
  <div class="mb-3">
    <label for="inputComment" class="form-label">Comment: </label>
    <input type="text" class="form-control" name="inputComment" required>
  </div>
  <div class="footer">
    <button type="submit" class="btn btn-primary">Submit Comment</button>
  </div>
</form>
</div>
<% } %>

    <% if (typeof message != "undefined") { %>
      <div class="modal" id="commentModal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="commentMessage">
            </div>
            <div class="modal-footer">
              <a href="/">Return Home</a>
            </div>
          </div>
        </div>
      </div>

    <!-- call script -->
    <script>
      const myModal = new bootstrap.Modal(document.getElementById('commentModal'));
    myModal.show();

    let message = document.getElementById("commentMessage");
    message.innerHTML = "Comment Added!";
    </script>
     <% } %>

  </body>
  <%- include('partials/footer.ejs') %>
</html>


