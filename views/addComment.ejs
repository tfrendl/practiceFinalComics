<%- include('partials/header.ejs') %>

  <div id="pageContent" class="m-4">
<% if (typeof comic != "undefined") { %> 
<div id="comicSpecifics" class="d-flex flex-column align-items-center justify-content-center gap-2">
  <h2 class="comicTitle"><%= comic[0].comicTitle %></h2>
  <img src="<%=comic[0].comicUrl%>" alt="Comic">
</div>
<form method="POST" action="/submitAddComment">
  <div class="d-flex flex-column align-items-center justify-content-center gap-2">
  <div class="mb-3">
    <input type="hidden" value="<%=comic[0].comicId%>" class="form-control" id="storeComicId" name="comicId">
  </div>
  <div class="mb-3 w-50">
    <label for="inputUsername" class="form-label">Username: </label>
    <input type="text" class="form-control" name="inputUsername" required>
  </div>
  <div class="mb-3 w-50">
    <label for="inputEmail" class="form-label">Email Address: </label>
      <input type="text" class="form-control" name="inputEmail" required>
  </div>
  <div class="mb-3 w-50">
    <label for="inputComment" class="form-label">Comment: </label>
    <textarea class="form-control" name="inputComment" rows="3"></textarea>
  </div>
  <div class="footer">
    <button type="submit" class="btn btn-info btn-outline-dark">Submit Comment</button>
  </div>
  </div>
</form>
</div>
<% } %>

    <% if (typeof message != "undefined") { %>
      <div class="modal" id="commentModal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="commentMessage">
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- call script -->
    <script>
      const myModal = new bootstrap.Modal(document.getElementById('commentModal'));
    myModal.show();

    let message = document.getElementById("commentMessage");
    message.innerHTML = "Comment Added!";
    </script>
     <% } %>

  </body>
  <%- include('partials/footer.ejs') %>
</html>


